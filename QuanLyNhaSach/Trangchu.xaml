        <Label x:Name="Soluongkhach" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Height="76" Width="322" Margin="359,20,0,0" Foreground="White" FontSize="30" Grid.Row="1" FontWeight="Bold"/>
